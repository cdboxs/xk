/* pages/package/setPwd/index.wxss */
.setPwd{
  display: block;
  width:95%;
  margin:0 auto;
}
.iconfont{
  color: #999;
  font-size: 44rpx;
}
.setPwd view{
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
  margin:15rpx 0;
  border-bottom:1px solid #ddd;
}
.setPwd view input{
  width: 100%;
  height: 80rpx;
  padding:0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.setPwd button{
  color: #fff;
  margin-top:60rpx;
  background:#0282f5;
}